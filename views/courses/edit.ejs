<%- include('../layout', { title: 'Edit Course' }) %>
<div class="container">
    <h1 class="mb-4">Edit Course</h1>

    <div class="row">
        <div class="col-md-8">
            <form action="/courses/<%= course._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="courseName" class="form-label">Course Name</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="courseName" 
                        name="courseName"
                        value="<%= course.courseName %>"
                        readonly
                    >
                    <small class="text-muted">Course name cannot be changed</small>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price ($)</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        id="price" 
                        name="price"
                        value="<%= course.price %>"
                        min="0"
                        step="0.01"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label for="duration" class="form-label">Duration</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="duration" 
                        name="duration"
                        value="<%= course.duration %>"
                        placeholder="e.g., 3 months"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label for="courseStartDate" class="form-label">Start Date</label>
                    <input 
                        type="date" 
                        class="form-control" 
                        id="courseStartDate" 
                        name="courseStartDate"
                        value="<%= course.courseStartDate.toISOString().split('T')[0] %>"
                        required
                    >
                </div>

                <button type="submit" class="btn btn-primary">Update Course</button>
                <a href="/courses/<%= course._id %>" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div> 