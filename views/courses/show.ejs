<%- include('../layout', { title: course.courseName }) %>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-4"><%= course.courseName %></h1>
            
            <div class="card mb-4">
                <img src="<%= course.image %>" class="card-img-top" alt="<%= course.courseName %>" style="max-height: 400px; object-fit: cover;">
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Price:</strong> $<%= course.price %>
                    </div>
                    <div class="mb-3">
                        <strong>Duration:</strong> <%= course.duration %>
                    </div>
                    <div class="mb-3">
                        <strong>Start Date:</strong> <%= course.courseStartDate.toLocaleDateString() %>
                    </div>
                    
                    <% if (typeof user != 'undefined') { %>
                        <div class="d-flex gap-2">
                            <a href="/courses/<%= course._id %>/edit" class="btn btn-primary">Edit Course</a>
                            <form action="/courses/<%= course._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete Course</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <a href="/courses" class="btn btn-secondary">Back to Courses</a>
        </div>
    </div>
</div> 